#!/usr/bin/env perl

# Pragmas.
use strict;
use warnings;

# Modules.
use PYX::Stack;

# Arguments.
if (@ARGV < 1) {
	print STDERR "Usage: $0 [filename] [-]\n";
	print STDERR "\tfilename\tprocess on filename\n";
	print STDERR "\t-\t\tprocess on stdin\n";
	exit 1;
}
my $arg = $ARGV[0];

# PYX::Stack object.
my $stack = PYX::Stack->new(
	'verbose' => 1,
);

# Parse from stdin.
if ($arg eq '-') {
	$stack->parse_handler(\*STDIN);

# Parse file.
} else {
	$stack->parse_file($arg);
}
